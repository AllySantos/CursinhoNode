<div class="card">
    <div class="card-body">
        
        <div class="row">
            <h3 class = "col card-title">Lista de categorias: </h3>
            <a href="/admin/categorias/novaCategoria"> <button class="col-11 btn btn-primary mr-4"> Add Categoria</button></a>
         </div>

        {{#each categorias}}
            <div class="card mt-4">
                <div class="card-body">
                    <div class="row font-size: 30px;">
                        
                        <h3 class="col card-title"> {{this.nomeCategoria}}</h3>

                        <a href="/admin/categorias/form-edit/{{this._id}}"><button class=" col-10 btn btn-danger mr-2"><i class="fas fa-trash fa-lg"></i></button></a> 
                        <a href="/admin/categorias/editarCategorias/{{this._id}}"><button class=" col-10 btn btn-info mr-2"><i class="fas fa-edit fa-lg"></i></button></a> 
                    </div>
                    
                    <p class="card-text">{{this.slugCategoria}}</p>    
                    <small>{{this.createdAt}}</small>       
                </div>
            </div> 

        {{else}}
        {{/each}}

    </div>
</div>
